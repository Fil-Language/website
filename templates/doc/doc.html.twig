{% extends 'base.html.twig' %}

{% block title %}| {{ title }}{% endblock %}

{% block head %}
    {{ asset('js', 'src/index.ts') }}
{% endblock %}

{% block body %}
    <main class="content-container doc">
        <div class="toc">
            <h4 class="toc-title">Table of content</h4>

            <ul class="toc-items">
                {% include 'doc/toc.html.twig' with {'items': menu} %}
            </ul>
        </div>

        <div class="doc-content">
            {{ content | markdown_to_html }}
        </div>
    </main>
{% endblock %}

